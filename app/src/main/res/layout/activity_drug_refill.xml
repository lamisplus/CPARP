            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">

                <EditText
                    android:id="@+id/duration4"
                    style="@style/TextBox"
                    android:hint="Duration in days (medicine 4)"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView26"
                style="@style/TextView"
                android:text="@string/prescribed4_label" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">

                <EditText
                    android:id="@+id/prescribed4"
                    style="@style/TextBox"
                    android:hint="Quantity Prescribed (medicine 4)"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView27"
                style="@style/TextViewLarge"
                android:text="@string/dispensed4_label" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">

                <EditText
                    android:id="@+id/dispensed4"
                    style="@style/TextBox"
                    android:hint="Quantity Dispensed (medicine 4)"
