                android:text="@string/dispensed2_label" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">

                <EditText
                    android:id="@+id/dispensed2"
                    style="@style/TextBox"
                    android:hint="Quantity Dispensed (medicine 2)"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView20"
                style="@style/TextView"
                android:text="@string/regimen3_label"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/regimen3"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown" />

            <TextView
                android:id="@+id/textView21"
                style="@style/TextView"
                android:text="@string/duration3_label" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">

                <EditText
                    android:id="@+id/duration3"
                    style="@style/TextBox"
