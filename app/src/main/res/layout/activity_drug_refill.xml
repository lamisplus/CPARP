<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_one"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                style="@style/TextViewLarge"
                android:text="@string/date_label" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">
            <EditText
                android:id="@+id/date_visit"
                style="@style/TextBox"
                android:hint="Encounter Date"
                android:focusable="false" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/textView6"
                style="@style/TextViewLarge"
                android:text="@string/question5_label" />

            <Spinner
                android:id="@+id/question5"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView7"
                style="@style/TextViewLarge"
                android:text="@string/question6_label" />

            <Spinner
                android:id="@+id/question6"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView8"
                style="@style/TextViewLarge"
                android:text="@string/question7_label" />

            <Spinner
                android:id="@+id/question7"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView9"
                style="@style/TextViewLarge"
                android:text="@string/question8_label" />

            <Spinner
                android:id="@+id/question8"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView10"
                style="@style/TextViewLarge"
                android:text="@string/question9_label" />

            <Spinner
                android:id="@+id/question9"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView12"
                style="@style/TextView"
                android:text="@string/regimen1_label"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/regimen1"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown" />

            <TextView
                android:id="@+id/textView13"
                style="@style/TextViewLarge"
                android:text="@string/duration1_label" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:paddingTop="2dp">
            <EditText
                android:id="@+id/duration1"
                style="@style/TextBox"
                android:hint="Duration in days  (medicine 1)"
                android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView14"
                style="@style/TextViewLarge"
                android:text="@string/prescribed1_label" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
