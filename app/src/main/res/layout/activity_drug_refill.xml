                android:text="@string/regimen4_label"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/regimen4"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown" />

            <TextView
                android:id="@+id/textView25"
