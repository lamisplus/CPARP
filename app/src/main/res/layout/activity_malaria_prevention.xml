<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="false"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView1"
        android:text="Do you use insecticide treated bed net?"
        android:layout_marginTop="16dp"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/malaria_prevention1"
        android:layout_below="@+id/textView1"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView2"
        android:text="Referred"
        android:layout_below="@+id/malaria_prevention1"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/malaria_prevention1_referred"
        android:layout_below="@+id/textView2"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView3"
        android:text="If pregnant have you been on intermittent preventive therapy?"
        android:layout_below="@+id/malaria_prevention1"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/malaria_prevention2"
        android:layout_below="@+id/textView3"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView4"
        android:text="Referred"
        android:layout_below="@+id/malaria_prevention2"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/malaria_prevention2_referred"
        android:layout_below="@+id/textView4"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <Button
        android:id="@+id/sync_button"
        style="@style/Button"
        android:text="Save"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:background="@drawable/blue_button"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:textColor="@android:color/white"
        android:onClick="onClickSaveButton" />
</LinearLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
