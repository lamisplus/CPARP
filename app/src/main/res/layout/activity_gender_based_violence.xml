<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:focusableInTouchMode="false"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="16dp"
        android:text="Have you been beaten, sexually coerced, raped or threatened or any of these by your partner or anyone else?"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/gbv1"
        android:layout_below="@+id/textView1"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView2"
        android:text="Referred for post GBV care"
        android:layout_below="@+id/gbv1"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/gbv1_referred"
        android:layout_below="@+id/textView2"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView3"
        android:text="Does your partner/family deny you food, shelter, freedom of movement, livelihood or finance to access health care?"
        android:layout_below="@+id/gbv1_referred"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/gbv2"
        android:layout_below="@+id/textView3"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:entries="@array/spinner_yes_no" />

    <TextView
        android:id="@+id/textView4"
        android:text="Referred for post GBV care:"
        android:layout_below="@+id/gbv2"
        style="@style/TextViewLarge" />

    <Spinner
        android:id="@+id/gbv2_referred"
        android:layout_below="@+id/textView4"
        style="@style/TextBox"
        android:background="@drawable/bg_dropdown"
        android:layout_marginBottom="8dp"
        android:entries="@array/spinner_yes_no" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
