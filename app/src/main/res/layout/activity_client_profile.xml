<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="12dp"
        app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="24dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/client_4"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:text="Smith Samuel Sixon"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    style="@style/TextViewMedium"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:weightSum="100"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/address"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="10"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No 3 Samilu Street Shaganmu, opposite liaison office Ikoyi, Lagos"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textColor="#212121"
                        android:layout_weight="90"
                        android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/address_layout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/gender"
                            android:layout_weight="10"/>

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:text="Female"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="36dp"
                        android:background="#2196F3"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/age"
                            android:layout_weight="10"/>

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:text="102 Years"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="36dp"
                        android:background="#2196F3"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/mobile"
                            android:layout_weight="10"/>

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="2dp"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:text="+2341099299392"/>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <!--<LinearLayout-->
                <!--android:id="@+id/middle_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:layout_below="@+id/top_layout"-->
                <!--android:layout_marginBottom="4dp"-->
                <!--android:orientation="vertical"-->
                <!--android:background="#2196F3">-->

            <!--</LinearLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/top_layout">

                <LinearLayout
                    android:id="@+id/cd4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last CD4/Date:"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="40"/>

                    <TextView
                        android:id="@+id/cd4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="50"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/cd4_layout"
                    android:layout_marginLeft="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last VL/Date:"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="40"/>

                    <TextView
                        android:id="@+id/viral_load"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="50"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/vl_layout"
                    android:layout_marginLeft="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Clinic:"
                        android:layout_marginLeft="16dp"
                        style="@style/TextViewMedium"
                        android:textColor="#000000"
                        android:layout_weight="40"/>

                    <TextView
                        android:id="@+id/next_clinic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="50"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next_vl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/next_layout"
                    android:layout_marginLeft="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Viral Load:"
                        android:layout_marginLeft="16dp"
                        style="@style/TextViewMedium"
                        android:textColor="#000000"
                        android:layout_weight="40"/>

                    <TextView
                        android:id="@+id/next_viralLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        style="@style/TextViewMedium"
                        android:layout_weight="50"/>

                </LinearLayout>


            </RelativeLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
