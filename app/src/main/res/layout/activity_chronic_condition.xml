<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:focusableInTouchMode="false"
        android:orientation="vertical">


    <TextView
            android:id="@+id/textView1"
            android:text="Known hypertensive?"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/hypertensive"
            android:layout_below="@+id/textView1"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView2"
            android:text="First time identified within the programme:"
            android:layout_below="@+id/hypertensive"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/first_hypertensive"
            android:layout_below="@+id/textView2"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView3"
            android:text="BP (mmHg):"
            android:layout_below="@+id/first_hypertensive"
            style="@style/TextViewLarge" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_background"
            >

        <EditText
            android:id="@+id/bp"
            android:hint="Enter BP (mmHg)"
            android:layout_below="@+id/textView3"
            style="@style/TextBox" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView4"
            android:text="BP above 140/90mmHg:"
            android:layout_below="@+id/bp"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/bp_above"
            android:layout_below="@+id/textView4"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView5"
            android:text="Referred for further care:"
            android:layout_below="@+id/bp_above"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/bp_referred"
            android:layout_below="@+id/textView5"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView6"
            android:text="Known diabetic?"
            android:layout_below="@+id/bp_referred"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/diabetic"
            android:layout_below="@+id/textView6"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView7"
            android:text="First time identified within the programme:"
            android:layout_below="@+id/diabetic"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/first_diabetic"
            android:layout_below="@+id/textView7"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <LinearLayout
            android:id="@+id/diabetic_no"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/first_diabetic" >

            <TextView
                android:id="@+id/textView8"
                android:text="Increased frequency of unrination"
                style="@style/TextViewLarge" />

            <Spinner
                android:id="@+id/dm_value1"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

            <TextView
                android:id="@+id/textView9"
                android:text="Increased water (fluid) intake"
                style="@style/TextViewLarge" />

            <Spinner
                android:id="@+id/dm_value2"
                style="@style/TextBox"
                android:background="@drawable/bg_dropdown"
                android:entries="@array/spinner_yes_no" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:text="Referred for further care:"
            android:layout_below="@+id/diabetic_no"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/dm_referred"
            android:layout_below="@+id/textView10"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />


    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
