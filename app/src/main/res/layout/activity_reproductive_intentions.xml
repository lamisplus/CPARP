<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/personalDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:focusableInTouchMode="false"
        android:orientation="vertical">


    <TextView
            android:id="@+id/textView1"
            android:text="Have you been screened for cervical cancer in the last one year?"
            android:layout_marginTop="16dp"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions1"
            android:layout_below="@+id/textView1"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView2"
            android:text="Referred for further care"
            android:layout_below="@+id/reproductive_intentions1"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions1_referred"
            android:layout_below="@+id/textView2"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView3"
            android:text="Do you want a pregnancy in the next one year?"
            android:layout_below="@+id/reproductive_intentions1_referred"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions2"
            android:layout_below="@+id/textView3"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView4"
            android:text="Referred for further care"
            android:layout_below="@+id/reproductive_intentions2"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions2_referred"
            android:layout_below="@+id/textView4"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView5"
            android:text="If no, are you currently using a contraceptive?"
            android:layout_below="@+id/reproductive_intentions2_referred"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions3"
            android:layout_below="@+id/textView5"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />

        <TextView
            android:id="@+id/textView6"
            android:text="Referred for further care"
            android:layout_below="@+id/reproductive_intentions3"
            style="@style/TextViewLarge" />

        <Spinner
            android:id="@+id/reproductive_intentions3_referred"
            android:layout_below="@+id/textView6"
            style="@style/TextBox"
            android:background="@drawable/bg_dropdown"
            android:entries="@array/spinner_yes_no" />


    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
